include-file = $HOME/.config/polybar/include-modules.ini

[bar/main]
monitor = ${env:MONITOR:}

width = 100%
height = 35
offset-y = 0
bottom = false
fixed-center = true

radius = 7.0

border-top-size = 5
border-left-size = 5
border-right-size = 5
border-bottom-size = 0
border-color = #00000000

wm-restack = i3
;override-redirect = false

scroll-up = next
scroll-down = prev

enable-ipc = true

background = ${colors.bg}
foreground = ${colors.fg}

include-file = $HOME/.config/polybar/fonts.ini

modules-left = margin margin session margin margin i3 margin window-title
modules-center = date 
modules-right = weather-icon margin weather-temp margin margin pulseaudio memory cpu margin wlan wired margin battery margin 

;tray-background = ${colors.bg}
;tray-position = right
;tray-maxsize = 16

cursor-click = pointer
;cursor-scroll = ns-resize

[settings]
screenchange-reload = true
